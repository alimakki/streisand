version 2.0

conn ikev2
    left={{ ansible_default_ipv4.address }}
    leftcert=/etc/ipsec.d/certs
    leftid={{ ansible_default_ipv4.address }}
    leftsendcert=always
    leftsubnet={{ ansible_default_ipv4.address }}/32
    leftrsasigkey=%cert
    # Clients
    right=%any
    rightaddresspool=10.10.0.1-10.10.0.254
    # optional rightid with restrictions
    # rightid="C=CA, L=Toronto, O=Libreswan Project, OU=*, CN=*, E=*"
    rightca=%same
    rightrsasigkey=%cert
    # connection configuration
    # DNS servers for clients to use
    {% for index, item in enumerate(upstream_dns_servers) %}
    modecfgdns{{ index+1 }} = {{ item }}
    {% endfor %}
    narrowing=yes
    dpddelay=30
    dpdtimeout=120
    dpdaction=clear
    auto=add
    ikev2=insist
    rekey=no
    sha2-truncbug=no
    fragmentation=yes
    encapsulation=yes
    ike=3des-sha1,3des-sha2,aes-sha1,aes-sha1;modp1024,aes-sha2,aes-sha2;modp1024,aes256-sha2_512
    phase2alg=3des-sha1,3des-sha2,aes-sha1,aes-sha2,aes256-sha2_512
    phase2=esp
